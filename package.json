{
  "name": "hudx",
  "version": "0.1.0",
  "description": "A high-performance charting library built with React and TypeScript",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "type-check": "tsc --build",
    "dev": "pnpm -r dev",
    "dev:examples": "pnpm --filter HudX/examples dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "pnpm -r run format",
    "clean": "tsc --build --clean && pnpm -r clean"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "prettier": "^3.8.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}