{
  "name": "hux-core",
  "version": "1.0.0",
  "description": "Core rendering engine for hudx charts",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "sideEffects": false,
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --watch",
    "test": "vitest --environment happy-dom --coverage.enabled=true",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path ../../.prettierignore",
    "clean": "tsc --build --clean && rm -rf dist"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.17",
    "happy-dom": "^20.0.11",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  }
}
