{
  "name": "hudx-charts",
  "version": "1.0.0",
  "description": "Chart library built on top of hudx core",
  "type": "module",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "sideEffects": false,
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --watch",
    "test": "vitest --environment happy-dom --coverage.enabled=true",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path ../../.prettierignore",
    "clean": "tsc --build --clean && rm -rf dist"
  },
  "dependencies": {
    "hudx-core": "workspace:*"
  },
  "devDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitest/coverage-v8": "^4.0.17",
    "happy-dom": "^20.0.11",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "react": ">=18.3.1",
    "react-dom": ">=18.3.1"
  }
}