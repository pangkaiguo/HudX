{
  "name": "hudx",
  "version": "1.0.0",
  "description": "Unified hudx package including core and charts",
  "type": "module",
  "main": "./dist/hudx.cjs",
  "module": "./dist/hudx.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/hudx.js",
      "require": "./dist/hudx.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && node scripts/build-hudx.js",
    "dev": "vite build --watch",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path ../../.prettierignore"
  },
  "dependencies": {
    "hux-charts": "workspace:*",
    "hux-core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.6.4",
    "typescript": "^5.3.3"
  }
}
