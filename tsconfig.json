{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "hudx-render": ["packages/render/src"],
      "hudx-charts": ["packages/charts/src"]
    }
  },
  "files": [],
  "references": [{ "path": "packages/render" }, { "path": "packages/charts" }]
}
